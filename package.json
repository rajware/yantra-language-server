{
  "name": "yantra-language-server",
  "displayName": "Yantra Language Server",
  "description": "Language Server Protocol (LSP) implementation for the Yantra grammar language",
  "version": "0.3.0",
  "publisher": "rajware",
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "yantra",
    "language server",
    "LSP",
    "grammar",
    "syntax highlighting",
    "vscode-extension"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rajware/yantra-language-server"
  },
  "bugs": {
    "url": "https://github.com/rajware/yantra-language-server/issues"
  },
  "files": [
    "dist/extension.js",
    "dist/server.js",
    "syntaxes/yantra.tmLanguage.json",
    "language-configuration.json",
    "LICENSE",
    "CHANGELOG.md",
    "icon.png"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "configuration": {
      "title": "Yantra Language Server",
      "properties": {
        "yantra.errorThreshold": {
          "type": "number",
          "default": 25,
          "description": "Maximum number of errors to report before suppressing further diagnostics."
        }
      }
    },
    "languages": [
      {
        "id": "yantra",
        "aliases": [
          "Yantra"
        ],
        "extensions": [
          ".y",
          ".yantra"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "yantra",
        "scopeName": "source.yantra",
        "path": "./syntaxes/yantra.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "clean": "node scripts/build.js clean",
    "build-debug": "node scripts/build.js debug",
    "build-package": "node scripts/build.js package rollup && vsce package -o out/ --readme-path assets/marketplace-README.md"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.25.11",
    "rollup": "^4.53.3"
  }
}
